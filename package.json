{
  "name": "grindery-wallet-sdk",
  "author": "Egor Miliukov",
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "start": "tsdx watch --format cjs,esm,umd",
    "build": "tsdx build --format cjs,esm,umd && bash ./build.sh",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.1.2",
    "husky": "^9.0.11",
    "size-limit": "^11.1.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.6.2",
    "typescript": "^3.9.10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/grindery-wallet-sdk.cjs.production.min.js",
      "limit": "30 KB"
    },
    {
      "path": "dist/grindery-wallet-sdk.esm.js",
      "limit": "60 KB"
    }
  ],
  "engines": {
    "node": ">=18"
  }
}
