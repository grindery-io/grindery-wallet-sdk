{
  "name": "grindery-wallet-sdk",
  "author": "Egor Miliukov",
  "version": "0.5.5",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "start": "dts watch --format cjs,esm,umd",
    "build": "dts build --format cjs,esm,umd",
    "build:example": "npm run build && bash ./build_example.sh",
    "build:docs": "typedoc && npm run build:example",
    "test": "dts test",
    "lint": "dts lint",
    "prepare": "dts build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.1.2",
    "dts-cli": "^2.0.5",
    "husky": "^9.0.11",
    "size-limit": "^11.1.2",
    "tslib": "^2.6.2",
    "typedoc": "^0.25.13",
    "typescript": "^5.4.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dts lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/grindery-wallet-sdk.cjs.production.min.js",
      "limit": "30 KB"
    },
    {
      "path": "dist/grindery-wallet-sdk.esm.js",
      "limit": "60 KB"
    }
  ],
  "engines": {
    "node": ">=18"
  }
}
